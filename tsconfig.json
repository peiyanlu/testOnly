{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedDeclarations": false,
    "extendedDiagnostics": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src",
    "_test_"
  ]
}
